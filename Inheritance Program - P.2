public class CargoShip extends Ship {

//---------------------------INSTANCE VARIABLES-------------------------------//
	private int tonnage;
	
//------------------------------CONSTRUCTOR-----------------------------------//

	public CargoShip(String shipName,int yearBuilt, int tonnage) {
		super(shipName,yearBuilt);
		this.tonnage = tonnage;	
	}

//--------------------------------METHODS------------------------------------//

	//Mutator 
	public void setTonnage(int tonnage) {
		this.tonnage = tonnage;
	}

	//Getter 
	public int getTonnage() {
		return tonnage;
	}
	
	//toString method to display ship name and cargo capacity
	public String toString() {
		String str = super.toString();
		int cell = str.indexOf('b');;
		return str.substring(0,cell) + tonnage + " ton cargo capacity" ;
	}

//-------------------------------------MAIN-----------------------------------//

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
